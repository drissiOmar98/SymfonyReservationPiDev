
{% extends 'reservation/shop.html.twig' %}

{% block title %}
    <h1>Hotel Reservation </h1>
{% endblock %}

{% block nbrObject %}

<li class="main_nav_item">
    <a href="#" class="minicart-btn toolbar-btn">
        <img style="" src="{{ asset('travelix/images/milestone_4.png') }}">
        <span class="quantity">{{ quantite }}</span>
    </a>
</li>
    <li class="main_nav_item"><a href="{{ path('reservation_panier_newO',{'total':total}) }}">Back Offre Reservation</a></li>
{% endblock %}

{% block section1 %}

<div class="container mb-4">
    <div class="row">
        <div class="col-12">
            {% if items | length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped">

                    <thead>
                    <tr>
                        <th scope="col"> </th>
                        <th scope="col">Offres</th>
                        <th scope="col">Available</th>
                        <th scope="col" class="text-center">Quantity</th>
                        <th scope="col" class="text-right">Price</th>
                        <th></th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for item in items %}
                    </thead>
                    <tbody>
                    <tr>
                        <td><img src="{{ asset('travelix/images/') ~ item.prod.path  }}" class="fixedimagepan" width="150"/> </td>

                        <td>{{ item.prod.nom }}</td>
                        <td>Disponible</td>

                        <td><p class="form-control"/>{{ item.quantite}}</p></td>
                        <td class="text-right">{{ item.prod.prix * item.quantite}} dt</td>





                        <td>
                        <td class="text-right"><a href="{{ path('cart_remove', {'id': item.prod.id}) }}" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> </a> </td>



                        </td>
                    </tr>

                    {% endfor %}
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>Sub-Total</td>
                        <td class="text-right">{{ total }} dt</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>Tax (12%)</td>
                        <td class="text-right">{{(total * 12)/ 100 }}</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td><strong>Total</strong></td>
                        <td class="text-right"><strong>{{ total * 1.12 }}</strong></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col mb-2">
            <div class="row">
                <div class="col-sm-12  col-md-6">
                    <a href="{{path('hotel_index')}}"class="btn btn-block btn-light">Continue Shopping</a>
                </div>
                <div class="col-sm-12 col-md-6 text-right">
                    <a href="{{ path('reservation_panier_new',{'total':total}) }}" class="btn btn-lg btn-block btn-success text-uppercase">Checkout</a>
                </div>
            </div>
        </div>


        {% else %}



                <div>
                    <h1>Surprise! c'est vide
                    </h1>
                </div>




        {% endif %}

        </div>
    </div>



</div>
        {% endblock %}

