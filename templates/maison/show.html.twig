{% extends 'base2.html.twig' %}
{% block html %}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body  >
{% block body %}

<h2 style="color:#AA3333; text-decoration: underline">Liste des Maison </h2>
<form method="post" action="{{ path('search') }}">
    <label style="font-weight: bold" >Search</label>
    <input type="text" name="search"><input type="submit" value="Recherche" class="btn btn-success">
</form>

<div class="block-content block-content-full">
    <!-- DataTables init on table by adding .js-dataTable-full class, functionality is initialized in js/pages/be_tables_datatables.min.js which was auto compiled from _es6/pages/be_tables_datatables.js -->
    <table class="table table-bordered table-striped table-vcenter js-dataTable-full">
        <thead>
        <tr>
            <th class="text-center" style="width: 80px;">ID</th>
            <th class="d-none d-sm-table-cell" style="width: 15%;">lieu</th>
            <th class="d-none d-sm-table-cell" style="width: 15%;">Hebergement</th>
            <th class="d-none d-sm-table-cell" style="width: 20%;" >Prix<form method="post" action="{{ path('trie') }}"  >
                    <BUTTON   class="  fa fa-chevron-circle-down" aria-hidden="true"  type="submit" ></BUTTON>
                </form>
                <form method="post" action="{{ path('tri') }}" >
                    <BUTTON   class="  fa fa-chevron-circle-up" aria-hidden="true"  type="submit" ></BUTTON>
                </form></th>
            <th class="d-none d-sm-table-cell" style="width: 15%;">Nom</th>
            <th class="d-none d-sm-table-cell" style="width: 15%;">Update</th>
            <th class="d-none d-sm-table-cell" style="width: 15%;">Delete</th>

        </tr>
        </thead>
        <tbody{%  for c in maison %}>
        <tr>
            <td class="text-center font-size-sm">{{c.id}}</td>
            <td class="d-none d-sm-table-cell">
                <span class="badge badge-success">{{ c.lieu }}</span>
            </td>


            <td>
                <em class="text-muted font-size-sm">{{ c.hebergement }}</em>
            </td>
            <td>
                <em class="text-muted font-size-sm">{{ c.prix }}</em>
            </td>

            <td>
                <em class="text-muted font-size-sm">{{ c.nom }}</em>
            </td>


            <td><a class="badge badge-danger" href=" {{ path('updateMais',{'id':c.id}) }}" class="nav-link">Update</a></td>
            <td><a class="badge badge-info" href=" {{ path('supp',{'id':c.id}) }}" class="nav-link">Delete</a></td>


        </tr>

        </tbody {% endfor %}>
    </table>

<br>
<form method="post" action="{{ path('ajouter') }}" style="padding-left: 80px">
    <input class="btn btn-success"
           type="submit" value="Ajouter Maison d'hote">
</form>
    <form method="post" action="{{ path('statistiquesMais') }}" style="padding-left: 80px">
        <input class="btn btn-success"
               type="submit" value="Statistique">
    </form>
{% endblock %}
</body>
</html>
{% endblock %}
